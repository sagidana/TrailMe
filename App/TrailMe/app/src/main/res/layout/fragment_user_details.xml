<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="depton.trailme.fragments.UserDetails"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:scaleType="centerInside"
                android:layout_alignParentLeft="true"
                android:id="@+id/profilePicture"
                android:src="@drawable/male_profile"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentTop="true">

            </ImageView>



            <TextView
                android:layout_marginTop="15dp"
                android:textSize="30dp"
                android:id="@+id/fullName"
                android:layout_toRightOf="@id/profilePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No User"/>

            <TextView
                android:layout_marginTop="5dp"
                android:textSize="22dp"
                android:id="@+id/city"
                android:layout_toRightOf="@id/profilePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fullName"
                android:text="Petach Tiqva"/>

            <TextView
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:id="@+id/birthdate"
                android:layout_toRightOf="@id/profilePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/city"
                android:text="12/05/2022"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/city"
                android:scaleType="centerInside"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/male"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tracks"
                android:id="@+id/trackClicker"
                android:layout_weight=".33"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groups"
                android:id="@+id/groupClicker"
                android:layout_weight=".33"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:id="@+id/eventsClicker"
                android:layout_weight=".33"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

</FrameLayout>

